# "All.go.rhythm" by Paul Hertz 
# Submitted to the 2013 Stanford University Code Poetry Slam
# Source: https://twitter.com/ignotus_mago/status/392183126190850048

include everything.*;
void wonder(Universe u) {
  while (ever || never) {
    for (Poem i in u.now()) {
      Word dust = u.speak(i);
      for (Moment mote in dust) {
        wonder(new Universe(mote));
      }
    }
  }
}   
